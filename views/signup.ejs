<!DOCTYPE html>
<html lang="en">

    <%- include("./partials/header.ejs") %>

    <body>
      <!-- Navbar-->
      <%- include("./partials/nav.ejs") %>
    
      <!-- Showcase -->
      <%- include("./partials/showcase.ejs") %>

      <form id="studentForm">
         <h2>Student Sign Up</h2>
         <p>Use student email for username</p>
         <label for="fName">First Name: </label>
         <input type="text" name="fName" required>
         <label for="lName">Last Name: </label>
         <input type="text" name="lName" required><br><br>
         <div class="student name error"></div>
         <label for="username">Username:</label>
         <input type="email" name="username" required /><br><br>
         <div class="student username error"></div>
         <label for="password">Password:</label>
         <input type="password" name="password" required />
         <div class="student password error"></div><br>
         <button>Sign Up</button>
      </form>
      <br><br>

      <form id="teacherForm">
        <h2>Teacher Sign Up</h2>
        <p>Use faculty email for username</p>
         <label for="fName">First Name: </label>
         <input type="text" name="fName" required>
         <label for="lName">Last Name: </label>
         <input type="text" name="lName" required><br><br>
         <label for="username">Username:</label>
         <input type="email" name="username" required /><br><br>
         <div class="username error"></div>
         <label for="password">Password:</label>
         <input type="password" name="password" required /><br><br>
         <div class="password error"></div>
         <label for="department">Department:</label>
         <input type="text" name="department" required><br>
         <button>Sign Up</button>
     </form>

     <script>
           //student
    const studentForm = document.getElementById('studentForm');
    const studentnameError = document.getElementsByName('student name error');
    const studentusernameError = document.getElementsByName('student username error');
    const studentpasswordError = document.getElementsByName('student password error');

    studentForm.addEventListener('submit', async (e) => {
        e.preventDefault();

        //reset errors
        studentnameError.textContent = '';
        studentusernameError.textContent = '';
        studentpasswordError.textContent = '';

        //get the values
        const fName = studentForm.fName.value;
        const lName = studentForm.lName.value;
        const username = studentForm.username.value;
        const password = studentForm.password.value;

        try {
            const res = await fetch('/student/signup', {
                method: 'POST',
                body: JSON.stringify({fName, lName, username, password}),
                headers: { 'Content-Type': 'application/json'}
            });
            const data = await res.json();
            console.log(data);
            if(data.errors) {
                studentnameError.textContent = data.errors.name;
                studentusernameError.textContent = data.errors.username;
                studentpasswordError.textContent = data.errors.password;

            }
            if(data.user) {
                location.assign('/');
            }

        }catch (err) {
            console.log(err);
        }
    });

    //teacher
    const teacherForm = document.getElementById('teacherForm');
    const teachernameError = document.getElementsByName('teacher name error');
    const teacherusernameError = document.getElementsByName('teacher username error');
    const teacherpasswordError = document.getElementsByName('teacher password error');
    const teacherdepartmentError = document.getElementsByName('teacher department error');

    teacherForm.addEventListener('submit', async (e) => {
        e.preventDefault();

        //reset errors
        teachernameError.textContent = '';
        teacherusernameError.textContent = '';
        teacherpasswordError.textContent = '';
        teacherdepartmentError.textContent = '';

        //get the values
        const fName = teacherForm.fName.value;
        const lName = teacherForm.lName.value;
        const username = teacherForm.username.value;
        const password = teacherForm.password.value;
        const department = teacherForm.department.value;

        try {
            const res = await fetch('/teacher/signup', {
                method: 'POST',
                body: JSON.stringify({fName, lName, username, password, department}),
                headers: { 'Content-Type': 'application/json'}
            });
            const data = await res.json();
            if(data.errors) {
                teachernameError.textContent = data.errors.name;
                teacherusernameError.textContent = data.errors.username;
                teacherpasswordError.textContent = data.errors.password;
                teacherdepartmentError.textContent = data.errors.department;
            }
            if(data.teacher) {
                location.assign('/');
            }

        }catch (err) {
            console.log(err);
        }
    });
  

     </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
